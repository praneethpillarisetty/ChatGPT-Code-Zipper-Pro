{
  "manifest_version": 3,
  "name": "ChatGPT Code Zipper Pro",
  "version": "1.0.0",
  "description": "Extract and zip code blocks from ChatGPT conversations",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["lib/jszip.min.js", "content.js"],
      "css": ["content.css"]
    }
  ]
}